<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/retry_button_stroke" />
            <solid android:color="@color/retry_button_background_ripple" />
            <padding
                android:left="@dimen/retry_button_padding"
                android:right="@dimen/retry_button_padding"
                android:bottom="@dimen/retry_button_padding"
                android:top="@dimen/retry_button_padding" />
            <corners android:radius="@dimen/retry_button_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/retry_button_stroke" />
            <solid android:color="@color/retry_button_background" />
            <padding
                android:left="@dimen/retry_button_padding"
                android:right="@dimen/retry_button_padding"
                android:bottom="@dimen/retry_button_padding"
                android:top="@dimen/retry_button_padding" />
            <corners android:radius="@dimen/retry_button_radius" />
        </shape>
    </item>
</selector>